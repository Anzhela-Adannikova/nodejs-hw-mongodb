                    },
                    "message": {
                      "type": "string",
                      "example": "Successfully registered a user!"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string",
                          "example": "65ca67e7ae7f10c88b598384"
                        },
                        "name": {
                          "type": "string",
                          "example": "Ivan Ivanenko"
                        },
                        "email": {
                          "type": "string",
                          "example": "vasyl9@example.com"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "409": {
            "$ref": "#/components/responses/409"
          }
        }
      }
    },
