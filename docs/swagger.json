                ],
                "properties": {
                  "name": {
                    "description": "User name",
                    "type": "string",
                    "example": "Ivan Ivanenko"
                  },
                  "email": {
                    "description": "User email",
                    "type": "string",
                    "example": "vasyl9@example.com"
                  },
                  "password": {
                    "description": "User password",
                    "type": "number",
                    "example": "vldfmvvdfjgdfg"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Successfully registered a user!",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "integer",
